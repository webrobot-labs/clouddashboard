{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,  // Abilita i decoratori
    "emitDecoratorMetadata": true,   // Genera metadati per i decoratori
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "jest"],
    "plugins": [
      {
        "name": "next"
      }
    ]
    ,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mjs", "jest.config.js", ".next/types/**/*.ts", "app/page.tsx", "auth", "next.config.mjs.old"],
  "exclude": ["node_modules"]
}